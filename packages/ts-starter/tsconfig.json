{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@Assets": ["src/assets"],
      "@Assets/*": ["src/assets/*"],
      "@Components": ["src/components"],
      "@Components/*": ["src/components/*"],
      "@Config": ["src/config"],
      "@Config/*": ["src/config/*"],
      "@Constants": ["src/constants"],
      "@Constants/*": ["src/constants/*"],
      "@Containers": ["src/containers"],
      "@Containers/*": ["src/containers/*"],
      "@Fonts/*": ["src/assets/fonts/*"],
      "@Images/*": ["src/assets/images/*"],
      "@Modules": ["src/modules"],
      "@Modules/*": ["src/modules/*"],
      "@Pages": ["src/pages"],
      "@Pages/*": ["src/pages/*"],
      "@Store": ["src/store"],
      "@Store/*": ["src/store/*"],
      "@Styled": ["src/styled"],
      "@Styled/*": ["src/styled/*"],
      "@Utils": ["src/utils"],
      "@Utils/*": ["src/utils/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "config", "e2e", "coverage", "node_modules"]
}
